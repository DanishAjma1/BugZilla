<h2 class="text-center mb-4">Add a Feature</h2>

<%= form_with model: [@project, @project.bugs.build], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Title", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :bug_type, "Type..", class: "form-label" %><br>
    <%= form.radio_button :bug_type, "feature", checked: @bug.bug_type == "feature", class: "form-check-input" %>
    <%= form.label :bug_type_feature, "Feature", class: "form-check-label" %><br>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Status", class: "form-label" %>
    <%= form.select :status, status_options(@bug.bug_type), { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :deadline, "Deadline", class: "form-label" %>
    <%= form.date_field :deadline, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save Feature", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<%= link_to "Back", @project, class: "btn btn-secondary mt-3" %>

<style>
  h2 {
    color: #333;
  }

  .form-label {
    font-weight: bold;
  }

  .form-control, .form-select {
    border-radius: 0.375rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }
</style>
