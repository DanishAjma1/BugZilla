<div class="container mt-5">
  <h1 class="mb-4">Bugs List</h1>

  <form id="bug-search-form" action="<%= bugs_path %>" method="get" class="mb-4">
    <div class="input-group">
      <input type="text" id="bug-search-input" name="query" class="form-control" placeholder="Search Bugs..." aria-label="Search Bugs">
      <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
  </form>

  <div id="bugs-list" class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Bug Title</th>
          <th scope="col">Description</th>
          <th scope="col">Priority</th>
        </tr>
      </thead>
      <tbody id="bugs-table-body">
        <%= render partial: "bugs/table", locals: { bugs: @bugs } %>
      </tbody>
    </table>

    <div class="pag-bar mt-4 d-flex justify-content-center">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
<style>
  #bug-search-form {
  max-width: 600px; /* Limit the search form width */
  margin: 0 auto; /* Center align the search form */
}

.table {
  margin-top: 20px; /* Space above the table */
}

.pag-bar {
  margin-top: 20px; /* Space above pagination */
}
</style>