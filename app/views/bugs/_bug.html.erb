
<table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description
          <th>Status</th>
          <th>Type</th>
          <th>*....*</th>
          <th>Actions</th>
          <th>Assigning</th>
        </tr>
      </thead>
      <tbody>
        <% @bugs.each do |bug| %>
        <tr>
        <% if bug.bug_type == "bug"%>
            <td><h3><%= bug.title %></h3></td>
            <td><%= bug.description %></td>
            <td><%= bug.status %></td>
            <td><%= bug.bug_type %></td>
            <td><div class="image-container">
              <% if bug.image.present? %>
              <%= image_tag bug.image.url, alt: "Profile Image", class: "uploaded-image" %>
            <% else %>
              <p>No profile image available.</p>
            <% end %>
            </td>
            <% elsif bug.bug_type == "feature" && current_user.role != "developer" %>
              <td><h3><%= bug.title %></h3></td>
              <td><%= bug.description %></td>
              <td><%= bug.status %></td>
              <td><%= bug.bug_type %></td>
              <td><p>No image available.</p></td>
            <% end %>
            <td>
              <% if current_user.role != "developer" || bug.bug_type == "bug"%>
<%= link_to "Update it", edit_project_bug_path(@project, bug) %><br>
<%= link_to "Destroy", [@project, bug], data: {
                                              turbo_method: :delete,
                                              turbo_confirm: "Are you sure?",
                                            } %>
            </td>
            <td>
              <h3>Assigned Developers:</h3>
                <ul>
                  <% if bug.users.present? %>
                    <% bug.users.each do |developer| %>
                      <li><%= developer.email %> (developer) </li>
                      <%= link_to 'Remove', remove_developer_project_bug_path(@project,bug, developer_id: developer.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                  <% else %>
                    <li>No developers assigned to this bug yet.</li>
                  <% end %>
                  </ul>
                <%= form_with url: assign_bug_to_self_project_bug_path(@project, bug), method: :patch, local: true do |form| %>
                  <div>
                    <%= form.submit "Assign Bug to Myself" %>
                  </div>
                <% end %>
                </td>
                <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>